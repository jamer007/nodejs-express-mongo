{
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "rules": {
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "import/no-unresolved": false,
    "import/extensions": false,
    "import/prefer-default-export": false,
    "max-len": ["warn", { "code": 120 }]
  }
}
